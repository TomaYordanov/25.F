@model finalProject.ViewModels.TransactionIndexViewModel



@{
    ViewData["Title"] = "Transactions";
}

<h2>All Transactions</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Excel Upload Form -->
<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select Excel File</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Import Transactions</button>
</form>

<hr />

<!-- Manual Entry Form -->
<h4>Add Transaction Manually</h4>
<form asp-action="ManualAdd" method="post">
    <div class="row">
        <div class="col-md-2">
            <label asp-for="ManualDateTime"></label>
            <input asp-for="ManualDateTime" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-2">
            <label asp-for="ManualAmount"></label>
            <input asp-for="ManualAmount" class="form-control" />
        </div>
        <div class="col-md-3">
            <label asp-for="ManualDescription"></label>
            <input asp-for="ManualDescription" class="form-control" />
        </div>
        <div class="col-md-2">
            <label asp-for="SelectedCategoryId"></label>
            <select asp-for="SelectedCategoryId" class="form-control" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                <option value="">-- Select Category --</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="ManualCategoryName"></label>
            <input asp-for="ManualCategoryName" class="form-control" placeholder="Enter new category (optional)" />
        </div>
        <div class="col-md-2">
            <label asp-for="SelectedAccountId"></label>
            <select asp-for="SelectedAccountId" class="form-control" asp-items="@(new SelectList(Model.Accounts, "Id", "Name"))">
                <option value="">-- Select Account --</option>
            </select>
        </div>

        <div class="col-md-1 d-flex align-items-end">
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </div>
</form>

<hr />

<div class="mt-4">
    <h5>Total Balance: <span class="text-success">@Html.DisplayFor(_ => Model.TotalBalance, "Currency")</span></h5>
</div>

<!-- Transactions Table -->
<table class="table mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Account</th>
            <th>Description</th>
            <th>Actions</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Transactions)
        {
            <tr>
                <td>@t.TransactionDateTime.ToShortDateString()</td>
                <td>@Html.DisplayFor(_ => t.Amount, "Currency")</td>
                <td>@t.CategoryName</td>
                <td>@t.AccountName</td>
                <td>@t.Description</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@t.Id" onsubmit="return confirm('Are you sure you want to delete this transaction?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



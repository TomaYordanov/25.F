@model finalProject.ViewModels.TransactionIndexViewModel

@{
    ViewData["Title"] = "Transactions";
}

<h2>All Transactions</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Import" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Select Excel File</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Import Transactions</button>
</form>

<div class="mt-4">
    <h5>Total Balance: <span class="text-success">@Model.TotalBalance.ToString("C")</span></h5>
</div>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Account</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model.Transactions)
        {
            <tr>
                <td>@t.TransactionDateTime.ToShortDateString()</td>
                <td>@t.Amount.ToString("C")</td>
                <td>@t.CategoryName</td>
                <td>@t.AccountName</td>
                <td>@t.Description</td>
            </tr>
        }
    </tbody>
</table>

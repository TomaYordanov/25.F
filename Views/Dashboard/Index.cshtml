@model finalProject.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<p><strong>Total Spent:</strong> $@ViewBag.TotalSpent</p>
<p><strong>Total Transactions:</strong> @ViewBag.TransactionCount</p>
<p><strong>Categories:</strong> @ViewBag.CategoryCount</p>

<hr />

<h4>Add New Account</h4>
<form asp-action="AddAccount" method="post">
    <div class="form-group">
        <label asp-for="NewAccountName">Account Name</label>
        <input asp-for="NewAccountName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewAccountBalance">Initial Balance</label>
        <input asp-for="NewAccountBalance" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Account</button>
</form>
<hr />

<h4>Your Accounts</h4>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Balance</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.Name</td>
                <td>@account.Balance.ToString("C")</td>
                <td>
                    <form asp-action="DeleteAccount" method="post">
                        <input type="hidden" name="accountId" value="@account.Id" />
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
